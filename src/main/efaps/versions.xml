    <application>eFapsApp-Projects</application>
    <dependencies>
        <dependency order="0">
            <groupId>org.efaps</groupId>
            <artifactId>efaps-kernel-install</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="1">
            <groupId>org.efaps</groupId>
            <artifactId>efaps-webapp-install</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="2">
            <groupId>org.efaps.apps</groupId>
            <artifactId>contacts</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="3">
            <groupId>org.efaps.apps</groupId>
            <artifactId>commons</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="4">
            <groupId>org.efaps.apps</groupId>
            <artifactId>products</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="5">
            <groupId>org.efaps.apps</groupId>
            <artifactId>sales</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="6">
            <groupId>org.efaps.apps</groupId>
            <artifactId>issues</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency order="7">
            <groupId>org.efaps.apps</groupId>
            <artifactId>accounting</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <version number="1" reloadCache="false" login="true" compile="true">
        <description>Install ERP-Projects Basic Modul.</description>
        <script type="groovy">
            import org.efaps.admin.runlevel.RunLevel;
            import org.efaps.db.Context;
            import org.efaps.db.Insert;
            import org.efaps.db.SearchQuery;
            import org.efaps.esjp.admin.ui.UIUpdate;
            import org.efaps.importer.DataImport;
            import org.efaps.db.Instance;

            import java.net.URL
            import java.io.File;

            EFAPS_LOGGER.info("Checking for import of JaasKeys for eFapsApp-Projects");

            SearchQuery query = new SearchQuery();
            query.setQueryTypes("Admin_User_JAASKey");
            query.addWhereExprEqValue("Key", "Projects_Admin");
            query.addSelect("OID");
            query.execute();
            if (!query.next()) {

                RunLevel.init("shell");
                RunLevel.execute();

                EFAPS_LOGGER.info("    Importing JaasKeys for eFapsApp-Projects");
                URL url = new URL(EFAPS_ROOTURL, "Data/IMPORT_UserJAASKey.xml");
                DataImport imp = DataImport.readFile(url);
                imp.updateInDB();
            }

            UIUpdate update = new UIUpdate();
            <!-- connect the Projects_MyDesk Menu to the main menu from efaps -->
            update.add2Menu("5f89913f-b4c4-4263-b9f0-738d3ec10aea", "87001cc3-c45c-44de-b8f1-776df507f268", 1);

            <!-- connect the Projects_Accounting_PeriodeTree_Label_Menu_Action_Create4Project Menu to the Accounting_PeriodeTree_Label_Menu_Action menu -->
            update.add2Menu("8a5727c9-e667-4c2c-b6f7-e67f881343cc", "33cdd0be-eb26-4f8c-af3d-d2b3782f09e2", -1);

            <!-- connect the Projects_Accounting_LabelTree_Projects Menu to the Accounting_LabelTree -->
            update.add2Menu("4c47213c-8339-43c7-a103-8b477deaf05e", "f67a39ed-8cd3-4551-9351-7bae6cf6447a", -1);

            <!-- connect the Projects_Contacts_ContactTree_Projects to the Contacts_ContactTree -->
            update.add2Menu("b50f8c15-2b1e-4c15-b493-4eb1e669d1db", "6de1b9bb-6a03-4c3b-82dd-363fde0aea0a", -1);
        </script>
    </version>
</install>
